<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <!-- Draw Simple Bar Chart -->
    <Button
        android:text="@string/draw_simple_bar_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="drawChart"
        android:id="@+id/drawSimpleBarChart" />

    <!-- Draw Bar Chart -->
    <Button
        android:text="@string/draw_bar_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="drawChart"
        android:id="@+id/drawBarChart" />

    <originator.ailin.com.smartgraph.barchart.SimpleBarChart
        android:id="@+id/bar_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
